<?xml version="1.0" encoding="utf-8"?>
<governor-config>
    <server>
        <port>8080</port>
    </server>

    <assets>
        <asset name="htdocs/index.html" path="/" />
    </assets>

    <routes>
        <!-- Static assets for the user interface -->
        <asset path="/"          file="/htdocs/index.html" mimetype="text/html" />
        <asset path="/style.css" file="/htdocs/style.css"  mimetype="text/css" />

        <!-- SystemController route -->
        <method path="/build" controller="System" method="getBuild" verb="get" />
    </routes>
</governor-config>
