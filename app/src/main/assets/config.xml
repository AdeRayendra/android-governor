<?xml version="1.0" encoding="utf-8"?>
<governor-config>
    <server>
        <port>8080</port>
    </server>

    <assets>
        <asset name="htdocs/index.html" path="/" />
    </assets>

    <routes>
        <!-- Static assets for the user interface -->
        <asset file="/htdocs/index.html" mimetype="text/html" path="/" />
        <asset file="/htdocs/style.css" mimetype="text/css" path="/style.css" />

        <!-- SystemController route -->
        <method controller="System" method="getBuild" path="/system/build" verb="get" />
    </routes>
</governor-config>
